datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Bia {
  bcpCoordinatorName    String?
  createdAt             DateTime @default(now())
  departmentDescription String?
  departmentName        String?
  id                    String   @id @default(cuid())
  secondarySpocName     String?
  updatedAt             DateTime @updatedAt
}

model Document {
  createdAt   DateTime @default(now())
  fileContent Json?
  fileName    String?
  fileType    String?
  id          String   @id @default(cuid())
  updatedAt   DateTime @updatedAt
}

model Ra {
  acknowledgedBy String?
  createdAt      DateTime @default(now())
  id             String   @id @default(cuid())
  locationName   String?
  preparedBy     String?
  raDetails      Json?
  updatedAt      DateTime @updatedAt
}

model GapAssessment {
  actionRequired String?
  assessmentArea String?
  createdAt      DateTime @default(now())
  gapDescription String?
  id             String   @id @default(cuid())
  updatedAt      DateTime @updatedAt
}
